{
    "manifest_version": 2,
    "name": "DarkTracker",
    "version": "1.1",

    "description": "Track if dark pattern",

    "icons": { "128": "assets/images/icon_128.png" },

    "browser_specific_settings": {
        "gecko": {
          "id": "darktracker@darktracker.xyz"
        }
      },

    "browser_action": {
        "default_icon": "assets/images/icon.png",
        "default_popup": "popup.html"
    },
    

    "content_scripts": [{
        "matches": [
            "<all_urls>"
        ],
        "js": [
            "assets/js/common.js",
            "assets/js/block_segment.js",
            "assets/js/content.js"
        ],
        "css": [
            "assets/css/insite.css"
        ],
        "run_at": "document_end"
    }],
    "permissions": [
        "webRequest",
        "<all_urls>",
        "activeTab",
        "tabs",
        "storage"
    ]
}